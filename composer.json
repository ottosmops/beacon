{
    "name": "ottosmops/beacon",
    "description": "A PHP library for parsing BEACON files",
    "type": "library",
    "keywords": ["beacon", "parser", "link-dump", "library", "php"],
    "license": "MIT",
    "authors": [
        {
            "name": "ottosmops",
            "email": "kraenzle@k-r.ch"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "BeaconParser\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BeaconParser\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html=build/coverage",
        "phpcs": "phpcs --standard=PSR12 src/ tests/",
        "phpcbf": "phpcbf --standard=PSR12 src/ tests/",
        "phpstan": "phpstan analyse src/ --level=max",
        "validate": "php bin/validate-beacon.php",
        "ci": [
            "@phpcs",
            "@phpstan", 
            "@test"
        ]
    },
    "config": {
        "sort-packages": true
    }
}

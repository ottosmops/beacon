<?xml version="1.0"?>
<ruleset name="BeaconParser">
    <description>Coding standard for BEACON Parser</description>
    
    <!-- Use PSR-12 as base -->
    <rule ref="PSR12"/>
    
    <!-- Check all files in src and tests -->
    <file>src</file>
    <file>tests</file>
    
    <!-- Ignore vendor directory -->
    <exclude-pattern>vendor/*</exclude-pattern>
    
    <!-- Show progress -->
    <arg value="p"/>
    
    <!-- Use colors -->
    <arg name="colors"/>
    
    <!-- Show error details -->
    <arg value="s"/>
</ruleset>
